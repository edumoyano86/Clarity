rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null;
    }

    match /incomes/{incomeId} {
      // Allow single document reads if owner
      allow get: if isSignedIn() && resource.data.userId == request.auth.uid;
      // Allow list reads if filtering by the user's own ID
      allow list: if isSignedIn() && request.query.get('userId') == request.auth.uid;
      
      allow write: if isSignedIn() && request.resource.data.userId == request.auth.uid;
    }

    match /expenses/{expenseId} {
      // Allow single document reads if owner
      allow get: if isSignedIn() && resource.data.userId == request.auth.uid;
      // Allow list reads if filtering by the user's own ID
      allow list: if isSignedIn() && request.query.get('userId') == request.auth.uid;

      allow write: if isSignedIn() && request.resource.data.userId == request.auth.uid;
    }

    match /expenseCategories/{categoryId} {
      // Allow single document reads if owner
      allow get: if isSignedIn() && resource.data.userId == request.auth.uid;
      // Allow list reads if filtering by the user's own ID
      allow list: if isSignedIn() && request.query.get('userId') == request.auth.uid;
      
      allow write: if isSignedIn() && request.resource.data.userId == request.auth.uid;
    }

    match /users/{userId} {
      allow read, write: if isSignedIn() && request.auth.uid == userId;
      allow create: if isSignedIn();
    }
  }
}
