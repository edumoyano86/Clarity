{
  "projectId": "clarity-d5e76",
  "entities": {
    "UserProfile": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "UserProfile",
      "type": "object",
      "description": "Represents a user's profile with personal and financial preferences.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the user profile."
        },
        "email": {
          "type": "string",
          "description": "User's email address.",
          "format": "email"
        },
        "firstName": {
          "type": "string",
          "description": "User's first name."
        },
        "lastName": {
          "type": "string",
          "description": "User's last name."
        },
        "preferredCurrency": {
          "type": "string",
          "description": "User's preferred currency for financial data (e.g., USD, EUR)."
        }
      },
      "required": [
        "id",
        "email"
      ]
    },
    "Transaction": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Transaction",
      "type": "object",
      "description": "Represents a single financial transaction (income, expense, or payment).",
      "properties": {
        "id": { "type": "string" },
        "type": { "type": "string", "enum": ["ingreso", "gasto", "pago"] },
        "amount": { "type": "number" },
        "date": { "type": "number", "description": "Timestamp" },
        "description": { "type": "string" },
        "categoryId": { "type": "string", "description": "FK to ExpenseCategory" },
        "accountId": { "type": "string", "description": "FK to Account" }
      },
      "required": ["id", "type", "amount", "date", "description"]
    },
    "ExpenseCategory": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "ExpenseCategory",
      "type": "object",
      "description": "Represents a category for expenses.",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "icono": { "type": "string" },
        "budget": { "type": "number" }
      },
      "required": ["id", "name", "icono"]
    },
    "Account": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Account",
      "type": "object",
      "description": "Represents a bill or account payable.",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "amount": { "type": "number" },
        "dueDate": { "type": "number", "description": "Timestamp" },
        "status": { "type": "string", "enum": ["pendiente", "pagada"] },
        "paidAmount": { "type": "number" }
      },
      "required": ["id", "name", "amount", "dueDate", "status", "paidAmount"]
    },
    "Investment": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Investment",
      "type": "object",
      "description": "Represents a user's investment.",
      "properties": {
        "id": { "type": "string" },
        "assetType": { "type": "string", "enum": ["crypto", "stock"] },
        "assetId": { "type": "string" },
        "name": { "type": "string" },
        "symbol": { "type": "string" },
        "amount": { "type": "number" },
        "purchasePrice": { "type": "number" },
        "purchaseDate": { "type": "number", "description": "Timestamp" }
      },
      "required": ["id", "assetType", "assetId", "name", "symbol", "amount", "purchasePrice", "purchaseDate"]
    },
    "Appointment": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Appointment",
      "type": "object",
      "description": "Represents a user's appointment.",
      "properties": {
        "id": { "type": "string" },
        "title": { "type": "string" },
        "date": { "type": "number", "description": "Timestamp" },
        "notes": { "type": "string" },
        "userId": { "type": "string" }
      },
      "required": ["id", "title", "date", "userId"]
    },
    "Note": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Note",
      "type": "object",
      "description": "Represents a user's note.",
      "properties": {
        "id": { "type": "string" },
        "title": { "type": "string" },
        "content": { "type": "string" },
        "createdAt": { "type": "number", "description": "Timestamp" },
        "updatedAt": { "type": "number", "description": "Timestamp" }
      },
      "required": ["id", "title", "content", "createdAt", "updatedAt"]
    }
  },
  "auth": {
    "providers": [
      "password",
      "google.com"
    ]
  },
  "firestore": {
    "structure": [
      {
        "path": "/users/{userId}",
        "definition": {
          "entityName": "UserProfile",
          "schema": { "$ref": "#/backend/entities/UserProfile" },
          "description": "Stores user profile information."
        }
      },
      {
        "path": "/users/{userId}/transactions/{transactionId}",
        "definition": {
          "entityName": "Transaction",
          "schema": { "$ref": "#/backend/entities/Transaction" },
          "description": "Stores all financial transactions for a user."
        }
      },
      {
        "path": "/users/{userId}/expenseCategories/{categoryId}",
        "definition": {
          "entityName": "ExpenseCategory",
          "schema": { "$ref": "#/backend/entities/ExpenseCategory" },
          "description": "Stores user-defined expense categories."
        }
      },
      {
        "path": "/users/{userId}/accounts/{accountId}",
        "definition": {
          "entityName": "Account",
          "schema": { "$ref": "#/backend/entities/Account" },
          "description": "Stores user's accounts payable."
        }
      },
      {
        "path": "/users/{userId}/investments/{investmentId}",
        "definition": {
          "entityName": "Investment",
          "schema": { "$ref": "#/backend/entities/Investment" },
          "description": "Stores user's investments."
        }
      },
      {
        "path": "/users/{userId}/appointments/{appointmentId}",
        "definition": {
          "entityName": "Appointment",
          "schema": { "$ref": "#/backend/entities/Appointment" },
          "description": "Stores user's appointments."
        }
      },
      {
        "path": "/users/{userId}/notes/{noteId}",
        "definition": {
          "entityName": "Note",
          "schema": { "$ref": "#/backend/entities/Note" },
          "description": "Stores user's notes."
        }
      }
    ]
  }
}